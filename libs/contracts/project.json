{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "contracts",
  "root": "libs/contracts",
  "sourceRoot": "libs/contracts/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "dist/libs/contracts",
        "tsConfig": "libs/contracts/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint 'libs/contracts/**/*.ts'"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --config libs/contracts/jest.config.ts"
      }
    }
  },
  "tags": ["scope:shared", "type:contract"]
}
